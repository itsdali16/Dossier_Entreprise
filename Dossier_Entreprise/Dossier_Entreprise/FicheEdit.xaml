<Window x:Class="Dossier_Entreprise.FicheEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dossier_Entreprise"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title=""  Width="auto" Height="758"
        >
    <ScrollViewer>
        <Grid>

            <StackPanel  HorizontalAlignment="Stretch">

                <!--<TextBlock Text="FICHE DE SUIVI DES AGENTS(MODIFICATION)" Style="{StaticResource title}"/>-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!--<ColumnDefinition Width="*" />-->
                    </Grid.ColumnDefinitions>

                    <!--StackPanel1-->
                    <StackPanel Margin="10,0">
                        <Image x:Name="photo" Stretch="Fill" Source="photo\default.jpeg" Width="auto" Height="auto" MaxHeight="200" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        <Button Margin="80,2" Width="200" FontSize="16" Click="choosePic" Background="#754254">Photo de Passport</Button>

                        <TextBox Name="nom_complet" KeyDown="enter_key_down" materialDesign:HintAssist.Hint="Nom Complet" />
                        <TextBox Name="nationalite" KeyDown="enter_key_down" materialDesign:HintAssist.Hint="Nationalite" />
                        <TextBox Name="entreprise" KeyDown="enter_key_down" materialDesign:HintAssist.Hint="Entreprise" />
                        <TextBox Name="contrat" KeyDown="enter_key_down" materialDesign:HintAssist.Hint="Num Contrat" />
                        <TextBox Name="objet" KeyDown="enter_key_down" materialDesign:HintAssist.Hint="Objet" />
                        <TextBox Name="num_passport" KeyDown="enter_key_down" materialDesign:HintAssist.Hint="Num Passport" />
                        <TextBox Name="observation" KeyDown="enter_key_down" AcceptsReturn="True" Height="120" materialDesign:HintAssist.Hint="Observation" />
                    </StackPanel>
                    <!--StackPanel2-->
                
                </Grid>

                <Button Margin="80,2" Width="120" FontSize="16" Click="validerEvent" Background="#754254">Valider</Button>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
